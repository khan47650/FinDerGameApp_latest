<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinDerGameApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FinDerGameApp" parent="Base.Theme.FinDerGameApp" />

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="edtTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@drawable/bg_edttxt_login</item>
    </style>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>
    <style name="button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>
    <style name="Numbers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="fragmenttext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purpledark</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="fragmenttext2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="tvgames">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="tvoxo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="tvPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purpledark</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="tvPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="tvNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purpledark</item>
    </style>

    <style name="question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="question1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="question3">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="colorName">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edtQuiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_edttxt_login</item>
    </style>
</resources>