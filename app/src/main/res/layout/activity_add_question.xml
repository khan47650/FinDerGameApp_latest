<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddQuestion"
    android:background="@color/white">
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuestion"
                android:fontFamily="@font/poppins_light_italic"
                android:textSize="22sp"
                android:textColor="@color/purpledark"
                android:text="Add Question"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/parent"
        android:background="@color/lightgrey"/>
    <RelativeLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp">
        <EditText
            android:id="@+id/addQuestion"
            style="@style/edtQuiz"
            android:layout_height="100dp"
            android:gravity="start"
            android:hint="Enter Question"/>
        <EditText
            style="@style/edtQuiz"
            android:layout_below="@id/addQuestion"
            android:id="@+id/option1"
            android:hint="Option 1"/>
        <EditText
            style="@style/edtQuiz"
            android:layout_below="@id/option1"
            android:id="@+id/option2"
            android:hint="Option 2"/>

        <EditText
            style="@style/edtQuiz"
            android:layout_below="@id/option2"
            android:id="@+id/option3"
            android:hint="Option 3"/>

        <EditText
            style="@style/edtQuiz"
            android:layout_below="@id/option3"
            android:id="@+id/option4"
            android:hint="Option 4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Correct Option:"
            android:layout_below="@id/option4"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:id="@+id/select"/>

         <Spinner
            android:id="@+id/selectOption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/select"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_edttxt_login"
            android:text="Option 1"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:entries="@array/options_array"
            app:drawableEndCompat="@drawable/ic_down_arrow" />
        <EditText
            android:id="@+id/addDetail"
            style="@style/edtQuiz"
            android:layout_below="@id/selectOption"
            android:layout_height="100dp"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:hint="Enter Detail"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            style="@style/button2"
            android:layout_below="@id/addDetail"
            android:layout_marginTop="10dp"
            android:text="Save"
            android:textAllCaps="false" />
    </RelativeLayout>
</RelativeLayout>