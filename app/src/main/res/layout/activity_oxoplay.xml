<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityOXOPlay"
    android:background="@color/white">
    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFinder"
                android:fontFamily="@font/poppins_light_italic"
                android:textSize="22sp"
                android:textColor="@color/purpledark"
                android:text="OXO"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/purpledark"
            android:text="2 Players"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/parent"
        android:background="@color/lightgrey"/>

    <RelativeLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:id="@+id/layoutTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/ivMyTurn"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_hand"/>
            <TextView
                android:id="@+id/tvTurn"
                style="@style/tvPoint"
                android:text="Player 1 Turn"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutTurnEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/ivMyTurnEmpty"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvEmpty"
                style="@style/tvPoint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layoutTurnEmpty"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/eight"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
                <ImageView
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/bg_oxo_play"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTurn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layoutwork"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/tvTurn2"
                style="@style/tvPoint"
                android:textColor="@color/red"
                android:text="Player 2 Turn"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/ivMyTurn2"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_hand2"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_player"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPlayer"
                    style="@style/tvPlayer"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Player 1" />
                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tvPlayer2"
                    style="@style/tvPlayer"
                    android:text="Player 2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvPlayerOneScore"
                    style="@style/tvNum"
                    android:text="0"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tvPlayer2Score"
                    style="@style/tvNum"
                    android:textColor="@color/red"
                    android:text="0"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>