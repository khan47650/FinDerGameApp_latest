<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityQuizResult"
    android:background="@color/white">
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFinder"
                android:fontFamily="@font/poppins_light_italic"
                android:textSize="22sp"
                android:textColor="@color/purpledark"
                android:text="FinDer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tvProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/iv_profile_pic"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/parent"
        android:background="@color/lightgrey"/>
    <RelativeLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvGames"
                style="@style/fragmenttext2"
                android:text="Games"/>

            <TextView
                android:id="@+id/tvQuiz"
                style="@style/fragmenttext"
                android:text="Quiz"/>

            <TextView
                android:id="@+id/tvFinder2"
                style="@style/fragmenttext2"
                android:text="Finder"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linear1">
            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_view"/>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_view"/>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_view"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/linear2"
            android:id="@+id/Que1"
            style="@style/question3"
            android:text="Q1. How many time zones are there in Russia? "/>

        <LinearLayout
            android:id="@+id/answer1"
            android:layout_below="@id/Que1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_resultred"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/a"
                    style="@style/question1"
                    android:text="a."/>

                <TextView
                    android:id="@+id/answe1"
                    style="@style/question1"
                    android:text="5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/b"
                    style="@style/question1"
                    android:text="b."/>

                <TextView
                    android:id="@+id/answe2"
                    style="@style/question1"
                    android:text="4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/c"
                    style="@style/question1"
                    android:text="c."/>

                <TextView
                    android:id="@+id/answe3"
                    style="@style/question1"
                    android:text="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/d"
                    style="@style/question1"
                    android:text="d."/>

                <TextView
                    android:id="@+id/answe4"
                    style="@style/question1"
                    android:text="9"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer1"
            android:text="Details:"
            android:fontFamily="@font/roboto_bold"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail"
            android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
            android:fontFamily="@font/roboto"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_below="@id/detail1"
            android:id="@+id/Que2"
            style="@style/question3"
            android:text="Q2:How many time zones are there in Russia? "/>
        <LinearLayout
            android:id="@+id/answer2"
            android:layout_below="@id/Que2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/a2"
                    style="@style/question1"
                    android:text="a."/>

                <TextView
                    android:id="@+id/answr1"
                    style="@style/question1"
                    android:text="5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_result"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/b2"
                    style="@style/question1"
                    android:text="b."/>

                <TextView
                    android:id="@+id/answr2"
                    style="@style/question1"
                    android:text="4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/c2"
                    style="@style/question1"
                    android:text="c."/>

                <TextView
                    android:id="@+id/answr3"
                    style="@style/question1"
                    android:text="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/d2"
                    style="@style/question1"
                    android:text="d."/>

                <TextView
                    android:id="@+id/answr4"
                    style="@style/question1"
                    android:text="9"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/detail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer2"
            android:text="Details:"
            android:fontFamily="@font/roboto_bold"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail3"
            android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
            android:fontFamily="@font/roboto"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/button2"
            android:layout_below="@id/detail4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Next Quiz"
            android:textAllCaps="false" />

    </RelativeLayout>

</RelativeLayout>