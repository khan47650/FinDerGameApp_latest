<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityColors_1"
    android:background="#f5f5f5">

    <RelativeLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCcolor"
                android:textSize="22sp"
                android:textColor="@color/purpledark"
                android:text="Find Colors"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/ivPic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_colors"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/parent"
        android:background="@color/lightgrey"/>

    <RelativeLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:paddingStart="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/tvCount"
            style="@style/SimpleTextView"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@color/purpledark"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Level 1"
            android:textColor="@color/purpledark"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLevel"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Blue = Green , Pink = Yellow "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSelectedNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNames"
            android:layout_centerHorizontal="true"
            android:text="Find Green and White"
            android:textColor="@color/purpledark"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/layoutwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/pColor1"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:id="@+id/Color1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_yellow">

                        <TextView
                            android:id="@+id/tvColor1Name"
                            style="@style/colorName"
                            android:text="Blue"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pColor2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:id="@+id/Color2"
                        android:layout_width="60dp"
                        android:layout_centerInParent="true"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_yellow">
                        <TextView
                            android:id="@+id/tvColor2Name"
                            style="@style/colorName"
                            android:text="Green"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/pColor3"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:id="@+id/Color3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_yellow">
                        <TextView
                            android:id="@+id/tvColor3Name"
                            style="@style/colorName"
                            android:text="Pink"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pColor4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:id="@+id/Color4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_yellow">

                        <TextView
                            android:id="@+id/tvColor4Name"
                            style="@style/colorName"
                            android:text="Yellow"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/pColor5"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:id="@+id/Color5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/tvColor1Black"
                            style="@style/colorName"
                            android:text="Black"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pColor6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:id="@+id/Color6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/tvColorWhite"
                            style="@style/colorName"
                            android:text="White"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tvSelectedNames"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:id="@+id/rr_leftColor1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor1"
                    style="@style/colorName"
                    android:text="Black"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rr_leftColor2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor2"
                    style="@style/colorName"
                    android:text="Black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rr_leftColor3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor3"
                    style="@style/colorName"
                    android:text="Black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rr_leftColor4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor4"
                    style="@style/colorName"
                    android:text="Black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rr_leftColor5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor5"
                    style="@style/colorName"
                    android:text="Black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rr_leftColor6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/bg_blue">
                <TextView
                    android:id="@+id/tv_leftColor6"
                    style="@style/colorName"
                    android:text="Black"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>